<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Bound{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('public/css/vendor/bootstrap.min.css') }}" />
        <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
        
        {% block stylesheets %}{% endblock %}
    </head>

    <body ng-app="BoundApp" ng-controller="MainController">
        <header>
            <section class="container-fluid">{% block header %}{% endblock %}</section>
        </header>

        <section id="main" class="container-fluid">{% block main %}{% endblock %}</section>

        <footer>
            <section class="container-fluid">{% block footer %}{% endblock %}</section>
        </footer>

        <script src="{{ asset('public/js/vendor/angular.min.js') }}"></script>
        <script src="{{ asset('public/js/vendor/angular-route.min.js') }}"></script>
        <script src="{{ asset('public/js/vendor/angular-resource.min.js') }}"></script>
        <script src="{{ asset('public/js/vendor/angular-animate.min.js') }}"></script>
        <script src="{{ asset('public/js/vendor/angular-ripple.js') }}"></script>

        <script src="{{ asset('public/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
