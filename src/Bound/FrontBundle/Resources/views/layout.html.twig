{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('public/css/app.css') }}" />
{% endblock %}

{% block header %}
    <div class="header container">
        <div class="col-xs-4 col-md-4 text-left">
            <a href="#/">
                <img src="{{ asset('public/images/logo.png') }}" class="pull-left">
                <h4> Bound </h4>
            </a>
        </div>

        <div class="col-xs-4 col-md-4 text-right">
            <h4>
                <form novalidate class="simple-form">
                    <i class="fa fa-search"></i>
                    <input type="text" placeholder="Rechercher">
                </form>
            </h4>
        </div>
    </div>
{% endblock %}

{% block main %}
    <nav class="sidebar col-xs-4 col-md-2 pull-left" ng-show="isShow" ng-class="animation">        
        <div class="sidebar-background col-xs-12 col-md-12">
            <div class="col-xs-10 col-md-5 pull-left">
                <img src="{{ asset('public/images/avatar.png') }}" class="img-responsive img-circle" />
            </div>

            <h3 class="col-xs-12 col-md-5 pull-left">Pierrick Gicquelais</h3>

            <div class="toggle-container pull-right" ng-click="toggleSidebar()" >
                <div id="sidebar-toggle" ng-class="isShow ? 'active' : ''">
                    <span></span>
                </div>
            </div>

        </div>

        <div class="sidebar-nav col-xs-12 col-md-12" ng-click="showSidebar()">
            <div class="list-group">
                <a href="#/" class="list-group-item" angular-ripple>
                    <i class="fa fa-home"></i>Index
                    <span class="badge">0</span>
                </a>
            
                <a href="#/dashboard" class="list-group-item" angular-ripple>
                    <i class="fa fa-user"></i>Mon compte
                </a>

                <a href="#/" class="list-group-item" angular-ripple>
                    <i class="fa fa-paper-plane-o"></i>Ma messagerie
                </a>
            
                <a href="#/achievement" class="list-group-item" angular-ripple>
                    <i class="fa fa-star"></i>Mes haut-faits
                </a>

                <a href="#/friends/{{ app.user.username }}" class="list-group-item" angular-ripple>
                    <i class="fa fa-heart-o"></i>Mes amis
                </a>
            
                <a href="#/crew/{{ app.user.crew.salt }}" class="list-group-item" angular-ripple>
                    <i class="fa fa-users"></i>Ma Crew
                </a>

                <a href="{{ path('fos_user_security_logout') }}" class="list-group-item logout" angular-ripple>
                    <i class="fa fa-power-off"></i>Se d√©connecter
                </a>
            </div>
        </div>
    </nav>

    <div class="content col-xs-6 col-xs-offset-4 col-md-8 col-md-offset-2 ng-hide" ng-show="!isShow" ng-class="animation">
        <div id="content" class="text-center" ng-view></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/js/controllers.js') }}"></script>
    <script src="{{ asset('public/js/services.js') }}"></script>
{% endblock %}
